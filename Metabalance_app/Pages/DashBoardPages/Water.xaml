<Page x:Class="Metabalance_app.Pages.Water"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignWidth="1920"
      d:DesignHeight="872"
      Title="Vízfogyasztás Követése">

    <Grid Background="#FFF5F7FB">
        <!-- Grid Row Definitions: Navbar + Tartalom -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          
            <RowDefinition />

        </Grid.RowDefinitions>

       
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center" Margin="0,20,0,-20" Width="1340">

               
                <Border CornerRadius="12" Background="White"  BorderBrush="#FFE8E8E8" BorderThickness="1">
                    <StackPanel >
                        <TextBlock Text="Naplózza a vízbevitelét" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Adja hozzá a napi vízfogyasztását." Foreground="#FF888888" Margin="0,0,0,16"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="MinusButton" Click="Minus_Click" Content="−" FontSize="22" Width="44" Height="44" Background="#FFF8F8F8" BorderBrush="#FFE0E0E0"/>
                            <TextBox x:Name="TbIntake" Grid.Column="1" Text="250" FontSize="18" FontWeight="SemiBold"
                                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0"
                                     Background="#FFF5F5F5" Height="44" Margin="8,0"/>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Button x:Name="PlusButton" Click="Plus_Click" Content="+" FontSize="22" Width="44" Height="44" Margin="0,0,0,4" Background="#FFF8F8F8" BorderBrush="#FFE0E0E0"/>
                            </StackPanel>
                        </Grid>
                        <Button x:Name="BtnAddIntake" Click="BtnAddIntake_Click" Content="Vízbevitelt rögzítése" Margin="0,20,0,0" Height="42"
                                Background="#FFF97979" Foreground="White" FontSize="16" FontWeight="SemiBold" BorderBrush="#FFF97979"/>
                    </StackPanel>
                </Border>

                
                <Border CornerRadius="12" Background="White" Padding="24" Margin="0,0,0,24" BorderBrush="#FFE8E8E8" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Napi haladás" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Tekintse meg, hogyan teljesít a napi céljához képest." Foreground="#FF888888" Margin="0,0,0,20"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                          
                            <Grid Width="160" Height="160" HorizontalAlignment="Center">
                                <Ellipse Stroke="#FFF0F0F0" StrokeThickness="12"/>
                                <Ellipse x:Name="CircleProgress" Stroke="#FFF97979" StrokeThickness="12"
                                         StrokeDashArray="0 100" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                         RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform Angle="-90"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <TextBlock x:Name="TbPercent" Text="0%" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>

                            
                            <StackPanel Grid.Column="1" Margin="24,0,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="TbGoal" Text="Cél: 2500 ml" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TbRemaining" Text="Hátralévő: 2500 ml" FontSize="14" Margin="0,6,0,16" Foreground="#FF777777"/>
                                <ProgressBar x:Name="PbDaily" Minimum="0" Maximum="2500" Height="10" Foreground="#FFF97979" Background="#FFF0E0E0"/>
                                <TextBlock x:Name="TbMessage" Text="Kezdd el a napot vízzel!" Margin="0,10,0,0" Foreground="#FF777777"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                
                <Border CornerRadius="12" Background="White" Padding="24" BorderBrush="#FFE8E8E8" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Napi cél beállítása" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Állítsa be a napi vízfogyasztási célját." Foreground="#FF888888" Margin="0,0,0,18"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Aktuális cél:" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TbGoalValue" Text="2500 ml" FontWeight="SemiBold"/>
                        </StackPanel>
                        <Slider x:Name="SlGoal" Minimum="1000" Maximum="4000" Value="2500" 
            TickFrequency="250" IsSnapToTickEnabled="True" Margin="0,0,0,10"
            ValueChanged="SlGoal_ValueChanged"/>    
                        <TextBlock Text="Javasolt: 8–10 pohár (2000–2500 ml)." Foreground="#FF888888"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
        <Grid Height="52" VerticalAlignment="Center" Background="White" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

 
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                <Image Source="/Pages/img/logo-removebg-preview.png" Height="40"/>
                <TextBlock Text="Metabalance" FontSize="32" FontWeight="Bold" Foreground="#264653"/>
            </StackPanel>

         
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,20,0">
                <Button Width="45" Height="48" Content="–" Background="White" BorderThickness="0" Click="Minimize" Margin="5,0"/>
                <Button Width="45" Height="48" Content="▢" Background="White" BorderThickness="0" Click="Maximize" Margin="5,0"/>
                <Button Width="45" Height="48" Content="X" Background="White" BorderThickness="0" Click="Exit"/>
                <Button Width="180" Height="48" Content="Kijelentkezés" FontSize="20" Background="White" BorderBrush="Transparent" Click="BackToMain"/>
                <Image Source="/Pages/img/profileicon-removebg-preview.png" Height="38" Width="38" Margin="10,0,0,0"/>
            </StackPanel>

 
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Kezelőpult" Height="48" FontSize="20" Background="White" BorderBrush="Transparent" Click="BackDash" Margin="-110,0,214,0"/>
                <Button Content="Kalória" Height="48" FontSize="20" Background="White" BorderBrush="Transparent" Click="CaloriesClick" Margin="32,0,82,0"/>
                <Button Content="Alvás" Height="48" FontSize="20" Background="White" BorderBrush="Transparent"  Margin="164,0,-42,0"/>
                <Button Content="Víz" Height="48" FontSize="20" Background="White" BorderBrush="Transparent" Margin="293,0,-150,0"/>
                <Button Content="Hangulat" Height="48" FontSize="20" Background="White" BorderBrush="Transparent" Margin="396,0,-290,0" RenderTransformOrigin="1.458,0.458"/>
                <Button Content="Súly" Height="48" FontSize="20" Background="White" BorderBrush="Transparent" Click="WeightClick" Margin="526,0,-397,0"/>
                <Image  Height="40" Margin="526,0,-326,0" VerticalAlignment="Center" Width="46" Source="/Pages/img/weigthnav-removebg-preview.png"/>
                <Image HorizontalAlignment="Left" Height="40" Margin="-121,0,0,0" VerticalAlignment="Center" Width="46" Source="/Pages/img/house.png"/>
                <Image  Height="40" Margin="163,0,37,0" VerticalAlignment="Center" Width="46" Source="/Pages/img/sleepnav-removebg-preview.png"/>
                <Image  Height="40" Margin="292,0,-92,0" VerticalAlignment="Center" Width="46" Source="/Pages/img/waternav-removebg-preview.png"/>
                <Image  Height="40" Margin="383,0,-183,0" VerticalAlignment="Center" Width="46" Source="/Pages/img/moodnav-removebg-preview.png" RenderTransformOrigin="0.96,0.467"/>
                <Image HorizontalAlignment="Left" Height="40" Margin="32,0,0,0" VerticalAlignment="Center" Width="46" Source="/Pages/img/foodnav-removebg-preview.png"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
