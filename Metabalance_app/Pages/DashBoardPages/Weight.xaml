<Page x:Class="Metabalance_app.Pages.Weight"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F6FA"
      Width="1920"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      TextOptions.TextRenderingMode="ClearType"
      TextOptions.TextFormattingMode="Display" Height="979">

    <Page.Resources>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Width" Value="1344"/>
      
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0 0 0 24"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18"
                                      ShadowDepth="3"
                                      Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

     
        <Style x:Key="PageTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#777"/>
        </Style>

    </Page.Resources>


    <Grid Width="1920" 
          HorizontalAlignment="Center"  Height="1072" VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
 
            <ColumnDefinition Width="400"/>
    
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Margin="165,10,235,110">

            <StackPanel>

            
                <StackPanel HorizontalAlignment="Center"
                            Margin="0 40 0 40"/>

               
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>

                        <TextBlock Text="Napi súlybejegyzés"
                                   Style="{StaticResource SectionTitle}"/>
                        <TextBlock Text="Rögzítse jelenlegi súlyát és frissítse céljait."
                                   Style="{StaticResource MutedText}"
                                   Margin="0 4 0 16"/>

                        <TextBox Height="40"
                                 Margin="0 0 0 10"
                                 Text="Jelenlegi súly (kg)"/>

                        <TextBox Height="40"
                                 Margin="0 0 0 16"
                                 Text="Súlycél (kg)"/>

                        <Button Content="+ Súly naplózása"
                                Height="42"
                                Background="#FF6B6B"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

               
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>

                        <TextBlock Text="Testsúly változása"
                                   Style="{StaticResource SectionTitle}"/>
                        <TextBlock Text="Az elmúlt 6 hónap statisztikái a céljához viszonyítva."
                                   Style="{StaticResource MutedText}"
                                   Margin="0 4 0 20"/>

                        
                        <Grid Margin="0 0 0 20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#F4F4F4"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0 0 10 0">
                                <StackPanel>
                                    <TextBlock Text="Jelenlegi súly"
                                               Style="{StaticResource MutedText}"/>
                                    <TextBlock Text="74.1 kg"
                                               FontSize="20"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    Background="#F4F4F4"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="10 0 0 0">
                                <StackPanel>
                                    <TextBlock Text="Cél súly"
                                               Style="{StaticResource MutedText}"/>
                                    <TextBlock Text="70 kg"
                                               FontSize="20"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        
                        <Border Height="260"
                                Background="#F2F3F7"
                                CornerRadius="8">
                            <TextBlock Text="📉 Súly grafikon (LiveCharts / OxyPlot)"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#999"/>
                        </Border>

                    </StackPanel>
                </Border>

                
                <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                           Foreground="#AAA"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0 30"/>

            </StackPanel>
        </ScrollViewer>

        <Grid Height="52"
            Width="1920"
            Background="#F0F8F8"
            VerticalAlignment="Top" Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="443*"/>
                <ColumnDefinition Width="37*"/>
            </Grid.ColumnDefinitions>


            <Border Background="White"
                BorderBrush="Black"
                BorderThickness="2"
                Width="1920"
                Grid.ColumnSpan="2" Margin="0,0,0,-26">
                <Grid>
                    <Button Width="180"
                        Height="48"
                        Content="Kezelőpult"
                        FontSize="20"
                        BorderBrush="Transparent"
                        Click="BackDash"
                        RenderTransformOrigin="0.733,0.542" Canvas.Left="480" Canvas.Top="15" Margin="427,13,1309,13" Background="White" />
                    <Button Width="180"
                        Height="48"
                        Content="Kalória"
                        FontSize="20"
                        Background="White"
                        BorderBrush="Transparent"
                        Click="CaloriesClick"
                        RenderTransformOrigin="-0.242,0.542" Canvas.Left="870" Canvas.Top="16" Margin="612,14,1124,12" />
                    <Button Width="180"
                        Height="48"
                        Content="Alvás"
                        FontSize="20"
                        Background="White"
                        BorderBrush="Transparent"
                        RenderTransformOrigin="-0.042,0.406" Canvas.Left="692" Canvas.Top="16" Margin="800,12,936,14" />
                    <Button Width="180"
                        Height="48"
                        Content="Víz"
                        FontSize="20"
                        Background="White"
                        BorderBrush="Transparent"
                        
                        Canvas.Left="1052" Canvas.Top="15" Margin="990,12,746,14" RenderTransformOrigin="0.472,0.542" />
                    <Button Width="180"
                        Height="48"
                        Content="Hangulat"
                        FontSize="20"
                        Background="White"
                        BorderBrush="Transparent"
                      
                        Canvas.Left="1232" Canvas.Top="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1184,0,0,0"/>
                    <Button Width="180"
                        Height="48"
                        Content="Súly"
                        FontSize="20"
                        Background="White"
                        BorderBrush="Transparent"
                        Canvas.Left="1392" Canvas.Top="16" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="8.022,1.833" Margin="1369,0,0,0" />
                    <Image Source="/Pages/img/house.png" HorizontalAlignment="Left" Height="50" Margin="427,0,0,0" VerticalAlignment="Center" Width="67"/>
                    <Image Source="/Pages/img/foodnav-removebg-preview.png" HorizontalAlignment="Left" Height="40" Margin="630,0,0,0" VerticalAlignment="Center" Width="54"/>
                    <Image Source="/Pages/img/sleepnav-removebg-preview.png" HorizontalAlignment="Left" Height="40" Margin="820,0,0,0" VerticalAlignment="Center" Width="54"/>
                    <Image Source="/Pages/img/waternav-removebg-preview.png" HorizontalAlignment="Left" Height="40" Margin="1025,0,0,0" VerticalAlignment="Center" Width="54"/>
                    <Image Source="/Pages/img/moodnav-removebg-preview.png" HorizontalAlignment="Left" Height="40" Margin="1184,0,0,0" VerticalAlignment="Center" Width="54"/>
                    <Image Source="/Pages/img/weigthnav-removebg-preview.png" HorizontalAlignment="Left" Height="40" Margin="1378,0,0,0" VerticalAlignment="Center" Width="54" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="1.023"/>
                                <RotateTransform/>
                                <TranslateTransform Y="0.482"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Border>
            <Image Source="/Pages/img/profileicon-removebg-preview.png"
                Height="38"
                Width="38"
                VerticalAlignment="Top"
                Margin="1724,20,10,0"/>

            <Button Width="45"
                Content="X"
                Margin="105,2,-2,-23"
                Background="White"
                BorderThickness="0"
                Click="Exit"
                Grid.Column="1"/>

            <Button Width="45"
                Content="▢"
                Margin="10,2,93,-23"
                Background="White"
                BorderThickness="0"
                Click="Maximize"
                Grid.Column="1"/>

            <Button Width="45"
                Content="–"
                Margin="57,2,46,-23"
                Background="White"
                BorderThickness="0"
                Click="Minimize"
                Grid.Column="1"/>

            <Image Source="/Pages/img/logo-removebg-preview.png"
                Margin="130,14,1593,-12" />

            <TextBlock Text="Metabalance"
                FontSize="32"
                FontWeight="Bold"
                Foreground="#264653"
                Margin="184,18,1395,-8" />

            <Button Width="180"
                Height="48"
                Margin="1539,15,53,-11"
                Content="Kijelentkezés"
                FontSize="20"
                Background="White"
                BorderBrush="Transparent"
                Click="BackToMain"/>
        </Grid>

    </Grid>
</Page>
