<Page x:Class="Metabalance_app.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F9F9F9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>


        <Border Width="480"
                Padding="40"
                Background="White"
                CornerRadius="12"
                BorderBrush="#EEEEEE"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>
                <Button Content="← Vissza a főoldalra"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#D14B4B"
                        FontSize="14"
                        Cursor="Hand"
                        Click="BackToMain_Click"
                        Margin="0,0,0,10"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Regisztráció"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Hozza létre fiókját, és fedezze fel a lehetőségeket."
                               FontSize="14"
                               Foreground="#888"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
                
    
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Keresztnév" FontSize="14" Margin="5,0,0,3"/>
                        <TextBox Height="36"
                                 Padding="8"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Vezetéknév" FontSize="14" Margin="5,0,0,3"/>
                        <TextBox Height="36"
                                 Padding="8"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Grid>

      
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="E-mail"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <TextBox Height="36"
                             Padding="8"
                             Background="#FAFAFA"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"/>
                </StackPanel>


                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Jelszó"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <PasswordBox Height="36"
                                 Padding="8"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"/>
                </StackPanel>


                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Jelszó megerősítése"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <PasswordBox Height="36"
                                 Padding="8"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"/>
                </StackPanel>


                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Telefonszám"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <TextBox Height="36"
                             Padding="8"
                             Background="#FAFAFA"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"/>
                </StackPanel>
                

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Nem"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <ComboBox Height="36"
                              Background="#FAFAFA"
                              BorderBrush="#DDDDDD"
                              BorderThickness="1">
                        <ComboBoxItem Content="Férfi" />
                        <ComboBoxItem Content="Nő" />
                       
                    </ComboBox>
                </StackPanel>
                

                <Button Content="Regisztráció"
                        Height="44"
                        Background="#D14B4B"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0"/>

            </StackPanel>
        </Border>


        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                       FontSize="14"
                       Foreground="#777"/>
        </StackPanel>

    </Grid>
</Page>
