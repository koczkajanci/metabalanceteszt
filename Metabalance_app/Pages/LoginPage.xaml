<Page x:Class="Metabalance_app.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F9F9F9">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

   
        <Border Width="420"
                Padding="40"
                Background="White"
                CornerRadius="12"
                BorderBrush="#EEEEEE"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >

            <StackPanel>
            <Button Content="← Vissza a főoldalra"
        HorizontalAlignment="Left"
        Background="Transparent"
        BorderThickness="0"
        Foreground="#D14B4B"
        FontSize="14"
        Cursor="Hand"
        Click="BackToMain_Click"
        Margin="0,0,0,10"/>
      
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Üdv újra!"
                               FontSize="26"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Jelentkezz be fiókodba"
                               FontSize="14"
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                </StackPanel>

       
                <StackPanel>
                    <TextBlock Text="E-mail cím"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <TextBox Height="36"
                             Padding="8"
                             Background="#FAFAFA"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1"
                             />
                </StackPanel>


                <StackPanel>
                    <TextBlock Text="Jelszó"
                               FontSize="14"
                               Margin="5,0,0,3"/>
                    <PasswordBox Height="36"
                                 Padding="8"
                                 Background="#FAFAFA"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Content="Emlékezz rám"
                              VerticalAlignment="Center"/>
                </Grid>

 
                <Button Content="Bejelentkezés"
                        Height="42"
                        Background="#D14B4B"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0"
                        Click="Go_Dashboard"/>

  
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,5,0,0">
                    <TextBlock Text="Ha még nincs fiókod, "
                               FontSize="13"/>
                    <Button Content="hozd létre most!"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#D14B4B"
                            Cursor="Hand"
                            FontSize="13"
                            Click="Registracio_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="© 2025 Metabalance. Minden jog fenntartva."
                       FontSize="14"
                       Foreground="#777"/>
        </StackPanel>
    </Grid>
</Page>